---
import { getI18N } from "../i18n/";
const { currentLocale = "es" } = Astro;
const i18n = getI18N({ currentLocale });
---

<contact>
  <form class="max-w-md mx-auto p-6">
    <!-- Campo de nombre -->
    <div class="mb-4">
      <label
        for="nombre"
        class="block text-yellow-200/90 text-sm font-bold mb-2"
      >
        {i18n.CONTACT_NAME}
      </label>
      <input
        type="text"
        id="nombre"
        name="nombre"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900"
        required
      />
    </div>

    <div class="mb-4">
      <label
        for="email"
        class="block text-yellow-200/90 text-sm font-bold mb-2"
      >
        {i18n.CONTACT_EMAIL}
      </label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full px-3 py-2 border border-yellow-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900"
        required
      />
    </div>

    <!-- Campo de mensaje -->
    <div class="mb-6">
      <label
        for="mensaje"
        class="block text-yellow-200/90 text-sm font-bold mb-2 wrap"
      >
        {i18n.CONTACT_MESSAGE}
      </label>
      <textarea
        id="mensaje"
        name="mensaje"
        rows="4"
        class="w-full px-3 py-2 border border-yellow-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 text-pretty text-wrap text-gray-900"
        required></textarea>
    </div>

    <!-- BotÃ³n de enviar -->
    <div class="flex justify-end">
      <button
        type="submit"
        class="bg-yellow-500/90 text-white px-4 py-2 rounded-md hover:bg-yellow-700/90 focus:outline-none focus:ring-2 focus:ring-blue-500 duration-300"
      >
        {i18n.CONTACT_SEND}
      </button>
    </div>
  </form>
</contact>
